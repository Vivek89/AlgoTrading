# ==========================================
# LOCAL DEVELOPMENT ENVIRONMENT
# ==========================================

# ----- NextAuth Configuration -----
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-min-32-chars-long!!!!!

# ----- Google OAuth (Development) -----
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-dev-google-client-id
GOOGLE_CLIENT_SECRET=your-dev-google-client-secret

# ----- API Configuration -----
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws/ticks

# ----- Encryption -----
NEXT_PUBLIC_ENCRYPTION_KEY=fallback-key-32-chars-long!!!!!

# ----- Environment -----
NODE_ENV=development
NEXT_PUBLIC_ENV=development

# ----- Feature Flags -----
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true

# ----- Timeouts (in milliseconds) -----
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=3000
