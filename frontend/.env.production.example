# ==========================================
# PRODUCTION ENVIRONMENT
# ==========================================

# ----- NextAuth Configuration -----
NEXTAUTH_URL=https://your-production-domain.com
NEXTAUTH_SECRET=your-production-secret-min-32-chars-long-CHANGE-THIS

# ----- Google OAuth (Production) -----
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-prod-google-client-id
GOOGLE_CLIENT_SECRET=your-prod-google-client-secret

# ----- API Configuration -----
NEXT_PUBLIC_API_URL=https://api.your-production-domain.com
NEXT_PUBLIC_WS_URL=wss://api.your-production-domain.com/ws/ticks

# ----- Encryption -----
NEXT_PUBLIC_ENCRYPTION_KEY=your-production-encryption-key-32-chars-CHANGE-THIS

# ----- Environment -----
NODE_ENV=production
NEXT_PUBLIC_ENV=production

# ----- Feature Flags -----
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DEBUG=false

# ----- Timeouts (in milliseconds) -----
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=5000

# ----- Security Headers -----
NEXT_PUBLIC_CSP_ENABLED=true

# ----- Logging -----
NEXT_PUBLIC_LOG_LEVEL=error
